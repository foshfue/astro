---
const { title, id } = Astro.props;
---

<section {id} class="flex flex-col items-center gap-4 space-y-12 scroll-mt-24 pb-20 text-center w-full">
  <div class="flex flex-col items-center gap-4">
    <slot name="eyebrow" />
    <h2
      class="text-5xl font-extrabold  tracking-tight text-center gradient-text"
    >
      {title}
    </h2>
  </div>
  <slot />
  <p class="max-w-xl text-2xl font-extrabold text-center px-6">
    <slot name="lead" />
  </p>
</section>
