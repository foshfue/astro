---
import { generateImage } from "astro-eleventy-img";
import { Icon } from "astro-icon";

const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";

const { webp, avif, png } = generateImage("src/assets/onlyfans-growth.png", {
  widths,
  formats: ["webp", "avif", "png"],
  outputDir: "public/assets/images/onlyfans-growth.png",
  urlPath: "/assets/images/onlyfans-growth.png",
});

const avifSrcset = avif.map(({ srcset }) => srcset).join(",");
const webpSrcset = webp.map(({ srcset }) => srcset).join(",");
const pngSrcset = png.map(({ srcset }) => srcset).join(",");
---


<section class="flex flex-col items-center scroll-mt-24 gap-y-8 px-6 py-12  text-center">

 <div class="flex flex-col gap-y-6">
    <h3 class="  text-4xl font-extrabold  w-fit">Success
      Is A 
  
<span class="underline underline-offset-2 decoration-blue-600">
      Choice</span>â€¦
      <br />
  
    </h3>
   
    <picture
    class="w-full md:w-full h-full max-w-lg  flex items-center justify-center duration-500 transition-all  motion-safe:hover:scale-105"
  >
    <source type="image/avif" srcset={avifSrcset} {sizes} />
    <source type="image/webp" srcset={webpSrcset} {sizes} />
    <source type="image/png" srcset={pngSrcset} {sizes} />
    <img
      class="object-cover w-full h-full rounded-md "
      src={png[0].url}
      width={png[0].width}
      height={png[0].height}
      alt="A floating astronaut in a space suit"
    />
  </picture>
</div>
<div class="flex flex-col gap-y-6">
    <h3 class="  text-4xl font-extrabold  w-fit">It Must Be
<span class="underline underline-offset-2 decoration-red-600">
  Repetitive</span>

    </h3>
    
    <picture
    class="w-full md:w-full h-full max-w-lg  flex items-center justify-center duration-500 transition-all  motion-safe:hover:scale-105"
    >
    <source type="image/avif" srcset={avifSrcset} {sizes} />
    <source type="image/webp" srcset={webpSrcset} {sizes} />
    <source type="image/png" srcset={pngSrcset} {sizes} />
    <img
    class="object-cover w-full h-full rounded-md "
    src={png[0].url}
    width={png[0].width}
    height={png[0].height}
    alt="A floating astronaut in a space suit"
    />
  </picture>
</div>

<h3 class="  text-4xl font-extrabold  w-fit">WILL YOU BE NEXT?
</h3>
</section>

